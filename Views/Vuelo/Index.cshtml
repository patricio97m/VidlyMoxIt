@model IEnumerable<Vuelos.Models.Vuelo>

@{
	ViewBag.Title = "Homepage";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Próximos vuelos</h2>

<table class="table table-striped table-bordered table-light table-hover mt-2" id="vuelos">
	<thead class="thead-dark">
	<tr>
		<th>Horario de llegada</th>
		<th>Vuelo</th>
		<th>Linea aérea</th>
		<th>¿Demorado?</th>
	</tr>
	</thead>
	<tbody>
	@foreach (var vuelo in Model)
	{
		<tr>
			<td>@vuelo.HorarioDeLLegada.ToString("HH:mm")</td>
			<td>@Html.ActionLink(vuelo.Nombre, "Edit", "Vuelo", new { id = vuelo.Id }, null)</td>
			<td>@vuelo.LineaAerea</td>
			<td>@(vuelo.Demorado ? "Sí" : "No")</td>
		</tr>
	}
	</tbody>
</table>

<p>
	@Html.ActionLink("Nuevo vuelo", "New", "Vuelo", null, new { @class = "btn btn-primary" })
</p>